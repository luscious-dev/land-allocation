extends base

block content
    .dashboard
        .container-fluid
            .content-area
                .dashboard-content
                    .dashboard-header.clearfix
                        .row
                            .col-md-6.col-sm-12
                                h4 Submit Property
                            .col-md-6.col-sm-12
                                .breadcrumb-nav
                                    ul
                                        li
                                            a(href='/') Index
                                        li
                                            a(href='/dashboard') Dashboard
                                        li.active Edit Land
                    .row
                        .column.col-lg-12
                            .properties-box
                                .inner-container
                                    .property-submit-form
                                        form(method='post' action='http://expert-themes.com/html/willies/admin/index.html')
                                            .title
                                                h3 Basic Info
                                            .row
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    label Land Name
                                                    input(type='text' name='LandName' placeholder='Property Title' value=land.LandName required='')
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    label Zonining Regulation
                                                    select.custom-select-box(name="ZoningReg" value=land.ZoningReg)
                                                        option(value="Residential" selected=land.ZoningReg == "Residential") Residential
                                                        option(value="Commercial" selected=land.ZoningReg == "Commercial") Commercial
                                                        option(value="Industrial" selected=land.ZoningReg == "Industrial") Industrial
                                                        option(value="Apartments" selected=land.ZoningReg == "Apartments") Apartments
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    label Topography
                                                    select.custom-select-box(name="Topography" value=land.Topography)
                                                        
                                                        option(value="Plain" selected=land.Topography == "Plain") Plain
                                                        option(value="Hilly" selected=land.Topography == "Hilly") Hilly
                                                        option(value="Rocky" selected=land.Topography == "Rocky") Rocky
                                                        option(value="Swampy" selected=land.Topography == "Swampy") Swampy
                                                        option(value="Sandy" selected=land.Topography == "Sandy") Sandy
                                                
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .range-slider-one.clearfix
                                                        label Area
                                                        input(type='number' name='Size' placeholder='SqFt' value=land.Size required='')

                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .range-slider-one.clearfix
                                                        label Land Shape
                                                        input(type='text' name='LandBoundaries' placeholder='Shape' value=land.LandBoundaries required='')

                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .range-slider-one.clearfix
                                                        label Price
                                                        input(type='number' name='Price' placeholder='â‚¦' value=land.Price required='')
                                                
                                            .title
                                                h3 Address
                                            .row
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    label Location
                                                    input(type='text' name='Location' placeholder='Address' value=land.Location required='')

                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    label State
                                                    select.custom-select-box(name="State")
                                                        - states = ["Abia", "Abuja", "Adamawa", "Akwa Ibom", "Anambra", "Bauchi", "Bayelsa", "Benu", "Borno", "Cross River", "Delta", "Ebonyi", "Edo", "Ekiti", "Enugu", "Gombe", "Imo", "Jigawa", "Kaduna", "Kano", "Katsina", "Kebbi", "Kogi", "Kwara", "Lagos", "Nasarawa", "Niger", "Ogun", "Ondo", "Osun", "Oyo", "Plateau", "Rivers", "Sokoto","Taraba", "Yobe", "Zamfara"]
                                                        option(value="") -- Select --
                                                        each state of states
                                                            option(value=state selected=land.State == state)= state
                                                        
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    label City
                                                    input(type='text' name='City' placeholder='City' value=land.City required='')

                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    label LGA
                                                    input(type='text' name='LGA' placeholder='Local Government Area' value=land.LGA required='')

                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .range-slider-one.clearfix
                                                        label Longitude
                                                        input(type='number' step="0.000001" name='Lng' placeholder='Lng' value=land.Lng required='')
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .range-slider-one.clearfix
                                                        label Latitude
                                                        input(type='number' step="0.000001" name='Lat' placeholder='Lat' value=land.Lat required='')
                                            .title
                                                h3 Land Gallery
                                            .row
                                                // Form Group
                                                .form-group.col-lg-12
                                                    #myDropZone.dropzone.dropzone-design
                                                        .dz-default.dz-message
                                                            span Drop files here to upload
                                            .title
                                                h3 Detailed Information
                                            .row
                                                // Form Group
                                                .form-group.col-lg-12
                                                    textarea(name='Description' placeholder='Land Information')
                                                        | #{land.Description}
                                            .title
                                                h3 Features (optional)
                                            .row
                                                - console.log(land)
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .check-box
                                                        input#service-1(type='checkbox' name='Accessibility' checked=land.Accessibility)
                                                        label(for='service-1') Accessibility
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .check-box
                                                        input#service-2(type='checkbox' name='nearShops' checked=land.nearShops)
                                                        label(for='service-2') Near Shops
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .check-box
                                                        input#service-3(type='checkbox' name='nearHospital'  checked=land.nearHospital)
                                                        label(for='service-3') Near Hospital
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .check-box
                                                        input#service-4(type='checkbox' name='hasElectricity' checked=land.hasElectricity)
                                                        label(for='service-4') Has Electricity
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .check-box
                                                        input#service-5(type='checkbox' name='hasWater' checked=land.hasWater)
                                                        label(for='service-5') Has Water
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .check-box
                                                        input#service-6(type='checkbox' name='isFenced' checked=land.isFenced)
                                                        label(for='service-6') Is Fenced
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .check-box
                                                        input#service-7(type='checkbox' name='isCleared' checked=land.isCleared)
                                                        label(for='service-7') Is Cleared
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    .check-box
                                                        input#service-8(type='checkbox' name='isPopular' checked=land.isPopular)
                                                        label(for='service-8') Is Popular
                                                input#lastchanged(type="hidden", value=JSON.stringify(land.LastChanged) name="LastChanged")
                                            .title
                                                h3 Contact Info
                                            .row
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    label Name
                                                    input(type='text' name='Name' placeholder='Name' required='')
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    label Email
                                                    input(type='email' name='Email' placeholder='Email' required='')
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    label Phone
                                                    input(type='text' name='Phone' placeholder='Phone' required='')
                                                // Form Group
                                                .form-group.col-lg-3.col-md-6.col-sm-12
                                                    button.theme-btn.btn-style-one#update-land(type='submit' data-land-id=land.Id)  Update Land
